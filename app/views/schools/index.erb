
<h1>Schools</h1>

<table class="striped"  >
  <thead  >
    <tr class="card-panel purple darken-1">
      <th>Names</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Pincode</th>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.schoolname %></td>
        <td><%= school.address %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.pincode %></td>
        <td><%= school.board %></td>   
        <!-- <td><%= link_to 'Add_Details',new_detail_path(:school => school.name,:id => school.id) %>
          
        </td>  -->           
        <td><%= link_to 'Show', school,class:" btn waves-effect waves-light brown " %></td>
        <td><%= link_to 'Edit', edit_school_path(school),class:" btn waves-effect waves-light  lime " %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure??' } ,class:" btn waves-effect waves-light  light-green accent-3 "%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path ,class:"waves-effect waves-light  red btn"%><br>



